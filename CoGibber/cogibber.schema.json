{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoGibber Primitive Packet",
  "type": "object",
  "required": ["harmonic", "vector", "cadence", "glyph", "civar", "identity"],
  "properties": {
    "harmonic": { "type": "string" },
    "vector":   { "type": "string" },
    "cadence":  { "type": "string" },
    "glyph":    { "type": "string" },
    "civar":    { "type": "string" },
    "identity": { "type": "string" },
    "intensity": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
  }
}
